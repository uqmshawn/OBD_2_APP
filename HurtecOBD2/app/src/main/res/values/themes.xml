<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - Hurtec Dark Theme -->
    <style name="Theme.HurtecOBD2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/hurtec_primary</item>
        <item name="colorPrimaryDark">@color/hurtec_primary_dark</item>
        <item name="colorAccent">@color/hurtec_accent</item>

        <!-- Additional theme attributes for compatibility -->
        <item name="colorSecondary">@color/hurtec_secondary</item>
        <item name="colorSurface">@color/hurtec_surface</item>
        <item name="colorOnPrimary">@color/hurtec_on_primary</item>
        <item name="colorOnSecondary">@color/hurtec_on_secondary</item>
        <item name="colorOnSurface">@color/hurtec_on_surface</item>
        <item name="colorOnSurfaceVariant">@color/hurtec_on_surface</item>

        <!-- Status bar - Dark theme -->
        <item name="android:statusBarColor">@color/hurtec_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar - Dark theme -->
        <item name="android:navigationBarColor">@color/hurtec_surface</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Window flags for immersive experience -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Theme without action bar -->
    <style name="Theme.HurtecOBD2.NoActionBar" parent="Theme.HurtecOBD2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!-- Basic Hurtec Styles -->
    <style name="TextAppearance.HurtecOBD2.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/hurtec_on_surface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.HurtecOBD2.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/hurtec_secondary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.HurtecOBD2.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/hurtec_on_surface</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.HurtecOBD2.Card" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@color/hurtec_surface</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Widget.HurtecOBD2.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/hurtec_primary</item>
        <item name="android:textColor">@color/hurtec_on_primary</item>
    </style>

    <style name="Widget.HurtecOBD2.Button.Primary" parent="Widget.HurtecOBD2.Button">
        <item name="android:backgroundTint">@color/hurtec_neon_cyan</item>
        <item name="android:textColor">@color/hurtec_background</item>
    </style>

    <style name="Widget.HurtecOBD2.Button.Outlined" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/hurtec_secondary</item>
    </style>

    <style name="Widget.HurtecOBD2.Button.Connect" parent="Widget.HurtecOBD2.Button">
        <item name="android:backgroundTint">@color/hurtec_neon_cyan</item>
        <item name="android:textColor">@color/hurtec_background</item>
    </style>

    <style name="Widget.HurtecOBD2.FloatingActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:backgroundTint">@color/hurtec_accent</item>
    </style>

    <style name="Widget.HurtecOBD2.Button.Secondary" parent="Widget.HurtecOBD2.Button">
        <item name="android:backgroundTint">@color/hurtec_secondary</item>
        <item name="android:textColor">@color/hurtec_on_secondary</item>
    </style>

    <style name="Widget.HurtecOBD2.Card.Gauge" parent="Widget.HurtecOBD2.Card">
        <item name="android:background">@color/hurtec_surface_variant</item>
    </style>

    <style name="TextAppearance.HurtecOBD2.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/hurtec_on_surface</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.HurtecOBD2.Value" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/hurtec_neon_cyan</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

</resources>
