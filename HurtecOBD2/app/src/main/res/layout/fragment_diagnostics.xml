<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hurtec_background"
    tools:context=".ui.diagnostics.DiagnosticsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                style="@style/TextAppearance.HurtecOBD2.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Vehicle Diagnostics"
                android:textAlignment="center" />

            <!-- Connection Status -->
            <TextView
                android:id="@+id/tv_connection_status"
                style="@style/TextAppearance.HurtecOBD2.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Not Connected"
                android:textAlignment="center"
                android:textColor="@color/status_disconnected" />

            <!-- Action Buttons -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.HurtecOBD2.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/TextAppearance.HurtecOBD2.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Diagnostic Actions"
                        android:textColor="@color/hurtec_neon_cyan" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_read_codes"
                        style="@style/Widget.HurtecOBD2.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Read Diagnostic Codes"
                        app:icon="@drawable/ic_search_24" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_clear_codes"
                        style="@style/Widget.HurtecOBD2.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Clear Diagnostic Codes"
                        app:icon="@drawable/ic_clear_24" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_read_freeze_frame"
                        style="@style/Widget.HurtecOBD2.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Read Freeze Frame Data"
                        app:icon="@drawable/ic_freeze_24" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="16dp"
                android:indeterminate="true"
                android:visibility="gone" />

            <!-- Diagnostic Results -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.HurtecOBD2.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/TextAppearance.HurtecOBD2.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Diagnostic Results"
                        android:textColor="@color/hurtec_neon_cyan" />

                    <!-- No Codes Message -->
                    <TextView
                        android:id="@+id/tv_no_codes"
                        style="@style/TextAppearance.HurtecOBD2.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        android:text="No diagnostic codes found.\nTap 'Read Diagnostic Codes' to scan for issues."
                        android:textAlignment="center"
                        android:visibility="visible" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
